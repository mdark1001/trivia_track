<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--formatos_encuestas.respuesta_encuesta-->
        <template id="trivia_track.page_trivia" name="Encuesta">

            <title>Preview de la encuesta</title>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
                  integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
                  crossorigin="anonymous"/>
            <link rel="stylesheet" href="/trivia_track/static/src/css/main.css"/>
            <meta charset="UTF-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1"/>
            <div class="container">
                <input type="hidden" id="csrf_token" name="csrf_token" t-att-value="request.csrf_token()"/>
                <section>
                    <div class="row">
                        <div class="col-sm-12">
                            <img src="/trivia_track/static/src/img/title.png" alt=""/>
                        </div>
                    </div>
                </section>

                <section class="selection">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                <h3>Respuestas Correctas
                                    <b id="gran_total">0</b>/
                                    <b id="total_questions"></b>
                                </h3>
                            </div>
                            <!--
                            <div class="col-xs-4 col-sm-6">
                                <button class="multiple_option btn-default btn">Multiple
                                    <br/>
                                    Choice
                                </button>
                            </div> -->
                            <div class="col-xs-12 col-sm-12">
                                <button class="other_option btn-default btn">
                                    You ready for this shirt??
                                </button>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="answers-sect">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6 info col-xs-12">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-xs-12">
                                <img src="/trivia_track/static/src/img/community_image_1418350352.png" alt=""/>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <script src="https://code.jquery.com/jquery-3.1.1.min.js"
                    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                    crossorigin="anonymous"/>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
                    integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
                    crossorigin="anonymous"/>
            <script src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"/>
            <script type="text/javascript" src="/formatos_encuestas/static/src/js/rq_comun.js"/>
            <script src="/trivia_track/static/src/js/app.js"/>
        </template>
    </data>
</odoo>